{{ form_start(form) }}
<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg form-control-a'}}) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.subtitle, {'attr': {'class': 'form-control form-control-lg form-control-a'}}) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-12">
        {{ form_widget(form.content, {'attr': {'class': 'form-control form-control-lg form-control-a'}}) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-8">
        {{ form_widget(form.author, {'attr': {'class': 'form-control form-control-lg form-control-a'}}) }}
    </div>
</div>
<button type="submit" class="btn btn-primary">Save</button>
<a href="{{ path('articles_show') }}" class="btn btn-warning">Return</a>
{{ form_end(form) }}